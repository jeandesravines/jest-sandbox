{
  "name": "@jdes/jest-sandbox",
  "private": false,
  "version": "2.0.0",
  "description": "A Sinon's sandbox like for Jest",
  "author": "Jean Desravines <hi@jeandesravines.com> (http://www.jeandesravines.com)",
  "license": "MIT",
  "main": "lib/sandbox.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeandesravines/jest-sandbox.git"
  },
  "scripts": {
    "commit": "commit-wizard",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "lint": "eslint --fix lib test",
    "test": "jest"
  },
  "dependencies": {
    "jest": "^22.0.6"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.0.0",
    "pre-git": "^3.15.0"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "post-commit": "git status",
      "pre-commit": "npm run -s lint",
      "pre-push": "npm -s test"
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
